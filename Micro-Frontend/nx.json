{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultProject": "shell",
    "targetDefaults": {
        "build": {
            "cache": true
        },
        "serve": {
            "cache": false
        }
    },
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": [
                    "build",
                    "test",
                    "lint"
                ]
            }
        }
    }
}